<UserControl x:Class="ERDiagramBuilder.TableControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:ERDiagramBuilder"
            
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="250">
    <Grid Background="AntiqueWhite">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="{Binding Table.Name}" FontWeight="Bold" Foreground="Black" FontSize="24"/>
        <ListBox ItemsSource="{Binding Fields}" Grid.Row="1" BorderBrush="Black" BorderThickness="1" Margin="2">
            
        </ListBox>
    </Grid>
</UserControl>
